@page "/etljob"

<PageTitle>ETL 作业</PageTitle>

<MudPaper Class="pa-3" Elevation="0">
    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
        <MudText Typo="Typo.h5">ETL 作业</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled>新建作业</MudButton>
    </MudStack>
</MudPaper>

<MudGrid Class="mt-3" GutterSize="2">
    @for (int i = 0; i < 4; i++)
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="1" Hover="true">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudIcon Icon="@Icons.Material.Filled.DataThresholding" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Class="ml-2">示例作业 @i</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">计划：每日 02:00</MudText>
                    <MudText Typo="Typo.caption" Class="mt-1 text-secondary">最近运行：成功</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">查看</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary">运行</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
